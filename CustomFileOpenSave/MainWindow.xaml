<Window x:Class="CustomFileOpenSave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomFileOpenSave"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Name="XAML_NewProject" Header="New Project" Click="XAML_NewProject_Click"/>
                    <MenuItem Name="XAML_OpenProject" Header="Open Project" Click="XAML_OpenProject_Click"/>
                    <MenuItem Name="XAML_SaveProject" Header="Save Project" Click="XAML_SaveProject_Click"/>
                    <Separator/>
                    <MenuItem Name="XAML_Close" Header="Close"/>
                    
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
